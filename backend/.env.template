# Database Configuration
MONGODB_URI=your_mongodb_connection_string_here
NODE_ENV=production
PORT=5001
CLIENT_URL=https://trendtacticsdigital.com

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@trendtacticsdigital.com

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10000000
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration
ANALYTICS_ENABLED=true
TRACKING_ID=your_google_analytics_id_here

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name_here

# AI API Keys (for backend services only)
# These should be kept secret and never exposed to frontend
OPENROUTER_KEY_1=your_first_openrouter_key_here
OPENROUTER_KEY_2=your_second_openrouter_key_here
OPENROUTER_KEY_3=your_third_openrouter_key_here

OPENAI_API_KEY=your_openai_api_key_here

GOOGLE_AI_API_KEY=your_google_ai_api_key_here

ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Rate Limiting for AI APIs
AI_RATE_LIMIT_WINDOW=900000
AI_RATE_LIMIT_MAX=100

# Security
API_KEY_ROTATION_INTERVAL=3600000
MAX_CONCURRENT_AI_REQUESTS=20