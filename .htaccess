# ----------------------------------------------------------
# Trendtactics Digital - UNIVERSAL .htaccess (Static + React SPA)
# ----------------------------------------------------------

Options -MultiViews +FollowSymLinks -Indexes

RewriteEngine On
RewriteBase /

# Hard-stop for static assets by directory (prevents rewrites on files)
RewriteCond %{REQUEST_URI} ^/(images|videos|styles|js)/ [NC]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# ----------------------------------------------------------
# 0. STATIC FILE HANDLING - MUST BE FIRST!
#    Allow images, videos, CSS, JS to load normally
#    CRITICAL: This must come BEFORE any rewrite rules
# ----------------------------------------------------------
# Explicitly allow /images/ directory FIRST
RewriteCond %{REQUEST_URI} ^/images/ [NC]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Allow all static file types
RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|svg|webp|mp4|webm|ogg|css|js|ico|woff|woff2|ttf|eot|pdf)$ [NC]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# ----------------------------------------------------------
# 1. REDIRECT .html URLs to clean URLs (301 Permanent Redirect)
#    Example: /services.html → /services
# ----------------------------------------------------------
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# ----------------------------------------------------------
# 2. REDIRECT /index to root (prevent /index URL)
# ----------------------------------------------------------
RewriteCond %{THE_REQUEST} /index/?[\s?] [NC]
RewriteRule ^index/?$ / [NC,L,R=301]

# ----------------------------------------------------------
# 3. CLEAN URLs (remove .html from static pages)
#    Example: /services  → loads services.html
#    Handle /ebooks/ with trailing slash - MUST BE FIRST
# ----------------------------------------------------------
# CRITICAL: Handle /ebooks/ FIRST before any other rules
RewriteCond %{REQUEST_URI} ^/ebooks/?$ [NC]
RewriteRule ^ebooks/?$ /ebooks.html [L,QSA]

# Then handle other specific routes with explicit file checks - MUST come before SPA fallback
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} ^/(tools|blog|about|services|portfolio|contact|pricing|academy|quiz|resources|shop|hub)/?$ [NC]
RewriteCond %{DOCUMENT_ROOT}/%1.html -f
RewriteRule ^(tools|blog|about|services|portfolio|contact|pricing|academy|quiz|resources|shop|hub)/?$ /$1.html [L]

# Then handle other single-word routes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_URI}.html -f
RewriteRule ^([^/]+)/?$ /$1.html [L]

# ----------------------------------------------------------
# 4. REACT SPA FALLBACK
#    If no static file or page exists → load index.html
#    (Prevents 404 on refresh for React sections)
#    BUT: Exclude known HTML pages to prevent redirects
#    NOTE: This must come AFTER the specific route rules above
# ----------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# CRITICAL: Exclude /ebooks/ from SPA fallback (must match exactly)
RewriteCond %{REQUEST_URI} !^/ebooks/?$ [NC]
# Exclude all other known static HTML pages from SPA fallback
RewriteCond %{REQUEST_URI} !^/(tools|blog|about|services|portfolio|contact|pricing|academy|quiz|resources|shop|hub)(\.html)?/?$ [NC]
# Exclude root and index
RewriteCond %{REQUEST_URI} !^/?$ [NC]
RewriteCond %{REQUEST_URI} !^/index/?$ [NC]
RewriteRule ^.*$ /index.html [L]

# ----------------------------------------------------------
# 5. SECURITY HEADERS (Block Puter.js)
# ----------------------------------------------------------
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Block Puter.js injection (headers only - preserve legitimate cookies)
    Header always unset X-Puter-Script
    Header always unset X-Powered-By
    
    # Block Puter.js domains via Content-Security-Policy (allows legitimate cookies)
    # Note: CSP blocks Puter.js scripts but does NOT interfere with cookies
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://unpkg.com https://fonts.googleapis.com https://www.googletagmanager.com https://www.google-analytics.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'; frame-ancestors 'self'; base-uri 'self';"
</IfModule>

# ----------------------------------------------------------
# 6. MIME TYPES (Fix images not loading)
# ----------------------------------------------------------
AddType image/jpeg .jpg .jpeg
AddType image/png .png
AddType image/gif .gif
AddType image/webp .webp
AddType image/svg+xml .svg
AddType video/mp4 .mp4
AddType video/webm .webm
AddType video/ogg .ogv
AddType audio/mpeg .mp3
AddType audio/ogg .ogg
AddType application/pdf .pdf

# ----------------------------------------------------------
# 7. Cache Assets
# ----------------------------------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
