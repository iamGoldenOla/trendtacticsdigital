# ----------------------------------------------------------
# Trendtactics Digital - UNIVERSAL .htaccess (Static + React SPA)
# ----------------------------------------------------------

Options -MultiViews +FollowSymLinks -Indexes

RewriteEngine On
RewriteBase /

# ----------------------------------------------------------
# 1. REDIRECT .html URLs to clean URLs (301 Permanent Redirect)
#    Example: /services.html → /services
# ----------------------------------------------------------
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# ----------------------------------------------------------
# 2. CLEAN URLs (remove .html from static pages)
#    Example: /services  → loads services.html
# ----------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# ----------------------------------------------------------
# 2. STATIC FILE HANDLING
#    Allow images, videos, CSS, JS to load normally
# ----------------------------------------------------------
RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|svg|webp|mp4|webm|css|js|ico|woff|woff2)$ [NC]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# ----------------------------------------------------------
# 3. REACT SPA FALLBACK
#    If no static file or page exists → load index.html
#    (Prevents 404 on refresh for React sections)
#    BUT: Exclude known HTML pages to prevent redirects
# ----------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(ebooks|tools|blog|about|services|portfolio|contact|pricing|academy|quiz|resources|shop)\.html?$ [NC]
RewriteCond %{REQUEST_URI} !^/(ebooks|tools|blog|about|services|portfolio|contact|pricing|academy|quiz|resources|shop)/?$ [NC]
RewriteRule ^.*$ /index.html [L]

# ----------------------------------------------------------
# 4. SECURITY HEADERS (Block Puter.js)
# ----------------------------------------------------------
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Block Puter.js injection (headers only - preserve legitimate cookies)
    Header always unset X-Puter-Script
    Header always unset X-Powered-By
    
    # Block Puter.js domains via Content-Security-Policy (allows legitimate cookies)
    # Note: CSP blocks Puter.js scripts but does NOT interfere with cookies
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://unpkg.com https://fonts.googleapis.com https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'; frame-ancestors 'self'; base-uri 'self';"
</IfModule>

# ----------------------------------------------------------
# 5. MIME TYPES (Fix images not loading)
# ----------------------------------------------------------
AddType image/webp .webp
AddType image/svg+xml .svg
AddType video/mp4 .mp4
AddType video/webm .webm
AddType video/ogg .ogv
AddType audio/mpeg .mp3
AddType audio/ogg .ogg

# ----------------------------------------------------------
# 6. Cache Assets
# ----------------------------------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
